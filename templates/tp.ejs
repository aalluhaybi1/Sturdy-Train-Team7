    <div class="form-container" style="margin-top: 20px; max-width: 500px; margin-left: auto; margin-right: auto;">
        <h3 style="text-align: center;">Flight Information</h3>
        <!-- HTML form -->
        <form method="POST" action="/addName" style="margin-top: 20px;">
            <!-- Add CSRF Token -->
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            
            <div style="margin-bottom: 15px;">
                <label for="name" style="display: block; font-weight: bold;">Name:</label>
                <input type="text" id="name" name="name" style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="flightNumber" style="display: block; font-weight: bold;">Flight Number:</label>
                <input type="text" id="flightNumber" name="flightNumber" style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="arrivalDate" style="display: block; font-weight: bold;">Arrival Date:</label>
                <input type="date" id="arrivalDate" name="arrivalDate" style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="email" style="display: block; font-weight: bold;">Email:</label>
                <input type="email" id="email" name="email" style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
            </div>
            <div style="margin-bottom: 15px;">
                <label for="mobileNumber" style="display: block; font-weight: bold;">Mobile Number:</label>
                <input type="tel" id="mobileNumber" name="mobileNumber" style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;">
            </div>
            <input type="submit" value="Submit" style="background-color: #00c0d9; color: #fff; border: none; border-radius: 5px; padding: 10px 20px; cursor: pointer; font-size: 16px;">
        </form>
    </div>

